<Window x:Class="WPF_HCI.EditEmailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Email"
        Height="450" Width="600"
        WindowStartupLocation="CenterOwner"
        Topmost="True"
        ResizeMode="CanResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Sender -->
            <RowDefinition Height="Auto"/>
            <!-- Recipients -->
            <RowDefinition Height="Auto"/>
            <!-- Subject -->
            <RowDefinition Height="*"/>
            <!-- Body -->
            <RowDefinition Height="Auto"/>
            <!-- Attachments -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sender -->
        <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,10,5" VerticalAlignment="Center">From:</TextBlock>
        <TextBox x:Name="SenderBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5"/>

        <!-- Recipients -->
        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,10,5" VerticalAlignment="Center">To:</TextBlock>
        <TextBox x:Name="RecipientsBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5"
                 ToolTip="Separate with commas"/>

        <!-- Subject -->
        <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,10,5" VerticalAlignment="Center">Subject:</TextBlock>
        <TextBox x:Name="SubjectBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,5"/>

        <!-- Content -->
        <TextBlock Grid.Row="3" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Top">Body:</TextBlock>
        <TextBox x:Name="ContentBox"
                 Grid.Row="3" Grid.Column="1" 
                 AcceptsReturn="True" TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto" Height="120"/>

        <!-- Attachments -->
        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Vertical" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Attachments:" FontWeight="Bold" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <Button x:Name="AddAttachmentBtn" Content="+" Width="30" Height="25" Click="AddAttachments_Click"/>
            </StackPanel>

            <ItemsControl x:Name="AttachmentsList" Margin="0,5,0,0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                            <TextBlock Text="📎" FontSize="14" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding}" FontSize="13" Width="400" TextTrimming="CharacterEllipsis"/>
                            <Button Content="✖" Width="25" Height="20" Margin="5,0,0,0"
                                    Tag="{Binding}" Click="RemoveAttachment_Click"
                                    ToolTip="Remove file"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="SaveButton" Content="Save Changes" Width="110" Margin="0,0,10,0"
                    Click="SaveButton_Click"/>
            <Button Content="Close" Width="75" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
