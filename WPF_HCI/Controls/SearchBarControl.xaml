<UserControl x:Class="WPF_HCI.SearchBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="40">

    <!-- Layout Container -->
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <!-- Input box for the search query -->
            <ColumnDefinition Width="3*" />
            <!-- Search category dropdown -->
            <ColumnDefinition Width="Auto" />
            <!-- Reset button -->
            <ColumnDefinition Width="Auto" />
            <!-- Filter options (bonus filter control) -->
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- (1.1) Search Input Field -->
        <TextBox x:Name="SearchBox"
                 Grid.Column="0"
                 Margin="5,0,5,0"
                 Height="25"
                 VerticalContentAlignment="Center"
                 Text="Search..."
                 Foreground="Gray"
                 GotFocus="SearchBox_GotFocus"
                 LostFocus="SearchBox_LostFocus"
                 TextChanged="SearchBox_TextChanged" />
        <!-- Placeholder behavior is implemented via GotFocus/LostFocus -->

        <!-- (1.2) Search Category ComboBox -->
        <ComboBox x:Name="CategoryBox"
                  Grid.Column="1"
                  Margin="0,0,5,0"
                  Height="25"
                  VerticalContentAlignment="Center"
                  SelectedIndex="0">
            <ComboBoxItem Content="Subject" />
            <ComboBoxItem Content="Sender" />
            <ComboBoxItem Content="Recipient" />
        </ComboBox>

        <!-- (1.3) Reset Button -->
        <Button Content="Reset"
                Grid.Column="2"
                Margin="0,0,5,0"
                Height="25"
                Click="ResetButton_Click" />
        <!-- Clicking this will raise a custom Reset event -->

        <!-- (Extra) Optional Filter for unread/important -->
        <ComboBox x:Name="FilterBox"
                  Grid.Column="3"
                  Margin="0,0,0,0"
                  Height="25"
                  SelectionChanged="FilterBox_SelectionChanged">
            <ComboBoxItem Content="All" IsSelected="True"/>
            <ComboBoxItem Content="Unread"/>
            <ComboBoxItem Content="Important"/>
        </ComboBox>
        <!-- This fires a FilterChanged event to the main window -->
    </Grid>
</UserControl>
