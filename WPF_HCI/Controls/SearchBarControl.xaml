<UserControl x:Class="WPF_HCI.SearchBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="40">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Search Box -->
        <TextBox x:Name="SearchBox"
                 Grid.Column="0"
                 Margin="5,0,5,0"
                 Height="25"
                 VerticalContentAlignment="Center"
                 Text="Search..."
                 Foreground="Gray"
                 GotFocus="SearchBox_GotFocus"
                 LostFocus="SearchBox_LostFocus"
                 TextChanged="SearchBox_TextChanged" />

        <!-- Search Category ComboBox -->
        <ComboBox x:Name="CategoryBox"
                  Grid.Column="1"
                  Margin="0,0,5,0"
                  Height="25"
                  VerticalContentAlignment="Center"
                  SelectedIndex="0">
            <ComboBoxItem Content="Subject" />
            <ComboBoxItem Content="Sender" />
            <ComboBoxItem Content="Recipient" />
        </ComboBox>

        <!-- Reset Button -->
        <Button Content="Reset"
                Grid.Column="2"
                Margin="0,0,5,0"
                Height="25"
                Click="ResetButton_Click"/>

        <!-- Filter ComboBox (Unread/Important) -->
        <ComboBox x:Name="FilterBox"
                  Grid.Column="3"
                  Margin="0,0,0,0"
                  Height="25"
                  SelectionChanged="FilterBox_SelectionChanged">
            <ComboBoxItem Content="All" IsSelected="True"/>
            <ComboBoxItem Content="Unread"/>
            <ComboBoxItem Content="Important"/>
        </ComboBox>
    </Grid>
</UserControl>
